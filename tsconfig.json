{
  "include": ["src", "types"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",

    "outDir": "public",

    /* paths - If you configure Snowpack import aliases, add them here. */
    "paths": {
      /* "source: skypack" type declarations are installed to ".snowpack/types" */
      "*": [".snowpack/types/*"]
    },
    /* noEmit - Snowpack builds (emits) files, not tsc. */
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true
  }
}
